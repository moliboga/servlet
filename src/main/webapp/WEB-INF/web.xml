<web-app>
  <servlet>
    <servlet-name>main</servlet-name>
    <servlet-class>MainServlet</servlet-class>
    <init-param>
      <param-name>errorTextColor</param-name>
      <param-value>red</param-value>
    </init-param>
    <init-param>
      <param-name>commonTextColor</param-name>
      <param-value>#521406</param-value>
    </init-param>
    <init-param>
      <param-name>welcomeTextColor</param-name>
      <param-value>blue</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>main</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>log</filter-name>
    <filter-class>LogFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>log</filter-name>
    <servlet-name>main</servlet-name>
  </filter-mapping>

</web-app>
